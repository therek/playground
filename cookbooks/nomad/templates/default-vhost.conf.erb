server {
    listen       80;
    server_name  localhost;

    location / {
        root   /etc/nginx/conf.d/html;
        index  index.html index.htm;
    }

    location /status {
        stub_status on;
        access_log off;
    }

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }
}
